<% provide('title', @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <div class="profile">
      <h2>
        <%= image_tag @user.image.url, style:"width: 150px; height: 150px;" %>
        <%= @user.name %>
      </h2>
      <ul>
        <li><%= @user.email %></li>
        <li><%= @user.description %></li>
      </ul>
      <% if current_user.id == @user.id %>
        <%= link_to '編集', edit_user_path(@user), class: 'btn btn-primary'%>
        <%= link_to '削除', @user, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger'  %>
      <% end %>
    </div>
  </aside>
  <div class="col-md-8">
    <h2>投稿一覧</h2>
    <ul class="posts">
      <% @phrases.each do |phrase| %>
        <li>
          <%= link_to phrase do %>
            <div class="post_title"><%= phrase.title %></div>
            <span class="post_date">
              <%= phrase.updated_at.strftime("%Y年%m月%d日 %H:%M") %>
            </span>
            <i class="far fa-heart"></i>1 
            <i class="far fa-comment"></i>1 
          <% end %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>
