<% provide('title', 'Login') %>

<div class="container">
    <%= form_for :session, url: login_path do |f| %>

      <div class="form-group">
        
        <%= f.label :email %>
        <%= f.text_field :email, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
        <br />
        <%= f.submit 'ログイン', class: 'btn btn-primary' %>

      </div>
    <% end %>
</div>
