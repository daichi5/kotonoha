<h1>新規投稿</h1>
<%= form_for @phrase do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
    <br />
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control" %>
    <br />
    <%= f.submit '投稿', class: 'btn btn-primary' %>
  </div>

<% end %>
